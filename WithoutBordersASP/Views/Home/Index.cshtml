@model WithoutBordersASP.Models.Dto.MainEntityDto
@{
    ViewBag.willBe = null;
    ViewBag.form = null;

}

<div class="wrapper">
    <!-- Початковий блок з Землею -->
    <div class="presentation">
        <div class="left-block">
            <h2 style="white-space:nowrap">@Model.LeftTitle</h2>
            <img src="@Model.LeftTitlePhoto" alt="left-block">
        </div>
        <div class="animka">
            <canvas class="earth"></canvas>
        </div>
        <div class="right-block">
            <img src="@Model.RightTitlePhoto" alt="right-block">
            <h2>@Model.RightTitle</h2>
        </div>
    </div>

    <!-- Про нас -->
    <div class="about">
        <div class="about-text">
            <h2>ПРО НАС</h2>
            <p>@Model.About</p>
        </div>
        <div class="about-image">
            <img src="@Model.AboutPhoto" alt="cross">
        </div>
    </div>

    <!-- План табору -->
    <div class="camp-plan" id="willBe">
        <h2>ЩО ВАС ЧЕКАЄ В НАШОМУ ТАБОРІ?</h2>
        <ul>
            @if (Model.Expectations.Any())
            {
                foreach (var expectation in Model.Expectations)
                {
                    <li>&#9679; @expectation.Expression</li>
                }
            }
        </ul>
    </div>

    <!-- Анкета реєстрації -->
    <div class="form" id="form">
        <div class="form-title">
            <h2>ХОЧЕШ З НАМИ?<br>ЗАПОВНЮЙ АНКЕТУ!*</h2>
            <p>*тільки для слухняних дітей<br> старше 5 років</p>
        </div>
        <form action="">
            <div class="form-element">
                <label for="firstName">Ім'я</label>
                <input type="text">
            </div>

            <div class="form-element">
                <label for="lastName">Прізвище</label>
                <input type="text">
            </div>

            <div class="form-element">
                <label for="sex">Стать</label>
                <select name="sex" id="sex">
                    <option value="male">Хлопчик</option>
                    <option value="female">Дівчинка</option>
                </select>
            </div>

            <div class="form-element">
                <label for="age">Вік</label>
                <input type="text">
            </div>
            <div class="form-element">
                <label for="alergy" class="alergy">Маєш алергію? Напиши нам про це!</label>
                <textarea name="alergy" id="alergy" cols="30" rows="10"></textarea>
            </div>
            <div class="form-element">
                <label for="number">Номер телефону</label>
                <input type="tel">
                <button>ВПЕРЕД!</button>
            </div>
            <div class="form-element">
            </div>
        </form>
    </div>

    <!-- Соціальні мережі -->
    <div class="follow-us">
        <h2>СЛІДКУЙ ЗА НАМИ В СОЦМЕРЕЖАХ!</h2>
        <div class="subscribe">
            <div class="social">
                <img src="images/facebook.svg" alt="facebook">
            </div>
            <div class="social">
                <img src="images/instagram.svg" alt="instagram">
            </div>
        </div>
    </div>
</div>

@section Script{
    <script src="https://d3js.org/d3.v3.min.js"></script>
    <script src="https://d3js.org/topojson.v1.min.js"></script>
    <script src="~/js/planet.js"></script>
    <script src="~/js/scroll.js"></script>

}